
<!-- updatelocation.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>
<body>
  <%- include('partials/navbar') %>
  <div class="content">
    <div class="update">
      <h2>Update Contact</h2>
      <form action="/single-contact/<%= contact._id %>?_method=PUT" method="POST">
        <label>First Name:</label>
        <input type="text" value="<%= contact.firstName %>" id="firstName" name="firstName" required />


        <label for="lastName">Last Name:</label>
        <input type="text" value="<%= contact.lastName %>" id="lastName" name="lastName" required /><br />

        <label for="email">Email:</label>
        <input type="email" value="<%= contact.email %>" id="email" name="email" required /><br />

        <label for="phone">Phone:</label>
        <input type="number" value="<%= contact.phone %>" id="phone" name="phone" required /><br />

        <label for="address">Address:</label>
        <textarea  id="address" name="address" rows="4" required><%= contact.address %></textarea><br />

        <button type="submit">Update Contact</button>
      </form>
    </div>
  </div>


  <%- include('partials/footer') %>
</body>
</html>